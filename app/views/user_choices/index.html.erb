<div class="container">
  <h1>Tic Tac Toe</h1>
  <hr>
  <div id="Jeu">
    <div>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
    </div>
    <div>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
    </div>
    <div>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
      <button type="button" class="btn btn-secondary"></button>
    </div>
    <div id="StatusJeu"> <h1> Status: <%= @match_winner %></h1></div>

    <%= simple_form_for [@match, @choice] do |f| %>
      <%= f.input :choice %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Start a new game",  root_path, class: "mt-3" %>
  </div>
</div>
